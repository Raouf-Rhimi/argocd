pipeline {
    agent any 
    environment {
		DOCKERHUB_CREDENTIALS=credentials('dockerhub')
	}
    stages {
        stage ("Clean up"){
            steps {
                deleteDir()
            }
        }
        stage ("Clone repo"){
            steps {
                bat "git clone https://kakachiSensei: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@github.com/kakachiSensei/k8s-manifests.git"
            }
        }
        stage ("update image tag") {
            steps {
                 dir("k8s-manifests/astonvilla-app"){
                    script {
                        def newImageTag = "1.0.1"
                        bat """
                        powershell -command  "(gc astonvilla-deployment.yaml) -replace 'image: .*', 'image: kakachisensei/astonvilla-app:1.0.0' | Out-File -encoding ASCII astonvilla-deployment.yaml"
                        """
                        bat """
                         git add .
                         git commit -m "version updated"
                         git push -u origin master
                        """
                    }
                }                
            }
        }
    }
}
