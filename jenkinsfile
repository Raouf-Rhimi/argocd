pipeline {
    agent any 
    environment {
		DOCKERHUB_CREDENTIALS=credentials('dockerhub')
	}
    stages {
        stage ("Clean up"){
            steps {
                deleteDir()
            }
        }
        stage ("Clone repo"){
            steps {
                bat "git clone https://kakachiSensei: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@github.com/kakachiSensei/k8s-manifests.git"
            }
        }
        stage ("update image tag") {
            steps {
                 dir("k8s-manifests/astonvilla-app"){
                    script {
                        def deploymentFile = readFile('astonvilla-deployment.yaml')
                        def newImageTag = '1.1.0'
                        deploymentFile = deploymentFile.replaceAll(/image:.*$/, "image: kakachisensei/astonvilla-app:${newImageTag}")
                        writeFile file: 'astonvilla-deployment.yaml', text: deploymentFile
                        bat 'git add astonvilla-deployment.yaml'
                        bat 'git commit -m "version updated"'
                        bat 'git push -u origin master'
                    }
                }                
            }
        }
    }
}
